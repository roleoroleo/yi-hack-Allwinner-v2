#!/bin/bash

source config.mosquitto

if [ "$USE_MOSQUITTO" != "1" ]; then
    exit
fi

set -e

LIBMAIN_PATH=/opt/yi/toolchain-sunxi-musl/toolchain

qemu-arm-static -L $LIBMAIN_PATH -E LD_LIBRARY_PATH=./_install/lib/ ./_install/bin/mosquitto_pub --help | grep 'Usage: mosquitto_pub'

qemu-arm-static -L $LIBMAIN_PATH -E LD_LIBRARY_PATH=./_install/lib/ ./_install/bin/mosquitto_sub --help | grep 'Usage: mosquitto_sub'
